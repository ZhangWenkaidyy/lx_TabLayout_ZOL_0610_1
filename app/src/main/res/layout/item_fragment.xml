<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_stitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView_stitle"
        android:layout_above="@+id/textView_comment_num"
        android:layout_toRightOf="@+id/imageView_imgsrc2"
        android:layout_toEndOf="@+id/imageView_imgsrc2" />
    <TextView
        android:id="@+id/textView_sdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView_sdate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/textView_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView_comment_num"
        android:layout_alignBottom="@+id/imageView_imgsrc2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView_imgsrc2"/>
</RelativeLayout>
